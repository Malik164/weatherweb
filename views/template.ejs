<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Weather AppðŸŒž</title>
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <h3>Weather AppðŸŒž</h3>
            </div>
            <ul class="nav-links">
                <li class="link-items"><a href="/">Home</a></li>
                
                <li>
                    <form action="/" method="post">
                        <input type="text" name="city" placeholder="type city name.. " autocomplete="off"></li>
                        <button type="submit" class="btn">Find..</button>
                    </form>

            </ul>
            <div class="hamburger">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
        </nav>
    </header>


    <!--  weather card -->
    <section class="weather-box">
        <div class="wrapper">
            <div class="widget-container">
              <div class="top-left">
                <h1 class="city" id="city"><%= cityName %> </h1>
                <h2 id="day"><%= country %> </h2>
              </div>
              <div class="top-right">
                <h1 id="weather-status"><%= weatherStatus %>  / <%= weatherDes %> </h1>
                <img class="weather-icon" src="https://openweathermap.org/img/wn/<%= weatherIcon %>@2x.png">
              </div>
              <div class="horizontal-half-divider"></div>
              <div class="bottom-left">
                <h1 id="temperature"> <%= temp %> </h1>
                <h2 id="celsius">&degC</h2>
              </div>
              <div class="vertical-half-divider"></div>
              <div class="bottom-right">
                <div class="other-details-key">
                    <p>Min &deg;C</p>
                    <p>Max &deg;C</p>
                  <p>Wind Speed</p>
                  <p>Humidity</p>
                  <p>Pressure</p>
                </div>
                <div class="other-details-values">
                    <p class="sunrise-time"><%= temp_min %> &deg;C</p>
                    <p class="sunset-time"><%= temp_max %>  &deg;C</p>
                  <p class="windspeed"><%= windSpeed %>  Km/h</p>
                  <p class="humidity"><%= humidity %>  %</p>
                  <p class="pressure"><%= pressure %>  hPa</p>
                </div>
              </div>
            </div>
          </div>
        
    </section>

    <script src="index.js"></script>
</body>
</html>